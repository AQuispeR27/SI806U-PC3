# ============================================
# Variables de Entorno - Docker Compose
# ============================================

# Copia este archivo a .env y configura tus valores

# ============================================
# Base de Datos
# ============================================
DB_ROOT_PASSWORD=root_password_change_me
DB_NAME=culqui_db
DB_USER=culqui_user
DB_PASSWORD=culqui_password_change_me
DB_PORT=3306

# ============================================
# Backend
# ============================================
NODE_ENV=development
BACKEND_PORT=5000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this_too
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# ============================================
# Frontend
# ============================================
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:5000/api
FRONTEND_URL=http://localhost:3000

# ============================================
# Versión (para producción)
# ============================================
VERSION=latest
